<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#F0EBE3">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/backround"
                android:gravity="center"
                android:text="Jawablah pertanyaan berikut!"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="#E4DCCF"
                android:textColor="#2C3639"
                android:paddingLeft="10dp"
                android:text="1. 5 x 2 = ...."
                android:textSize="15sp" />

            <RadioGroup
                android:id="@+id/Jawaban1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RadioButton
                    android:id="@+id/jwb1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="10"
                    android:textColor="#967E76"/>

                <RadioButton
                    android:id="@+id/jwb2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="12"
                    android:textColor="#967E76"/>
            </RadioGroup>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="#E4DCCF"
                android:textColor="#2C3639"
                android:paddingLeft="10dp"
                android:text="2. 10 - 7 = ...."
                android:textSize="15sp" />

            <RadioGroup
                android:id="@+id/Jawaban2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RadioButton
                    android:id="@+id/jwb1a"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="2"
                    android:textColor="#967E76"/>

                <RadioButton
                    android:id="@+id/jwb2a"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="3"
                    android:textColor="#967E76"/>
            </RadioGroup>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="#E4DCCF"
                android:textColor="#2C3639"
                android:paddingLeft="10dp"
                android:text="3. 15 : 3 = ...."
                android:textSize="15sp" />

            <RadioGroup
                android:id="@+id/Jawaban3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RadioButton
                    android:id="@+id/jwb1b"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="5"
                    android:textColor="#967E76"/>

                <RadioButton
                    android:id="@+id/jwb2b"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="3"
                    android:textColor="#967E76"/>
            </RadioGroup>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="#E4DCCF"
                android:textColor="#2C3639"
                android:paddingLeft="10dp"
                android:text="4. 10 x ... = 100"
                android:textSize="15sp" />

            <RadioGroup
                android:id="@+id/Jawaban4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RadioButton
                    android:id="@+id/jwb1c"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="10"
                    android:textColor="#967E76"/>

                <RadioButton
                    android:id="@+id/jwb2c"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="100"
                    android:textColor="#967E76"/>
            </RadioGroup>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="#E4DCCF"
                android:textColor="#2C3639"
                android:paddingLeft="10dp"
                android:text="5. 10 + 7 = ...."
                android:textSize="15sp" />

            <RadioGroup
                android:id="@+id/Jawaban5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RadioButton
                    android:id="@+id/jwb1d"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="18"
                    android:textColor="#967E76"/>

                <RadioButton
                    android:id="@+id/jwb2d"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="17"
                    android:textColor="#967E76"/>
            </RadioGroup>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="#E4DCCF"
                android:textColor="#2C3639"
                android:paddingLeft="10dp"
                android:text="6. 10 : 2 = ...."
                android:textSize="15sp" />

            <RadioGroup
                android:id="@+id/Jawaban6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RadioButton
                    android:id="@+id/jwb1e"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="2"
                    android:textColor="#967E76"/>

                <RadioButton
                    android:id="@+id/jwb2e"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="5"
                    android:textColor="#967E76"/>
            </RadioGroup>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="#E4DCCF"
                android:textColor="#2C3639"
                android:paddingLeft="10dp"
                android:text="7. 56 - 6 = ...."
                android:textSize="15sp" />

            <RadioGroup
                android:id="@+id/Jawaban7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RadioButton
                    android:id="@+id/jwb1f"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="50"
                    android:textColor="#967E76"/>

                <RadioButton
                    android:id="@+id/jwb2f"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="51"
                    android:textColor="#967E76"/>
            </RadioGroup>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="#E4DCCF"
                android:textColor="#2C3639"
                android:paddingLeft="10dp"
                android:text="8. 56 - 50 = ...."
                android:textSize="15sp" />

            <RadioGroup
                android:id="@+id/Jawaban8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RadioButton
                    android:id="@+id/jwb1g"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="5"
                    android:textColor="#967E76"/>

                <RadioButton
                    android:id="@+id/jwb2g"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="6"
                    android:textColor="#967E76"/>
            </RadioGroup>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="#E4DCCF"
                android:textColor="#2C3639"
                android:paddingLeft="10dp"
                android:text="9. 100 - 9 = ...."
                android:textSize="15sp" />

            <RadioGroup
                android:id="@+id/Jawaban9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RadioButton
                    android:id="@+id/jwb1h"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="90"
                    android:textColor="#967E76"/>

                <RadioButton
                    android:id="@+id/jwb2h"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="91"
                    android:textColor="#967E76"/>
            </RadioGroup>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="#E4DCCF"
                android:textColor="#2C3639"
                android:paddingLeft="10dp"
                android:text="10. 5 x 7 = ...."
                android:textSize="15sp" />

            <RadioGroup
                android:id="@+id/Jawaban10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RadioButton
                    android:id="@+id/jwb1i"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="35"
                    android:textColor="#967E76"/>

                <RadioButton
                    android:id="@+id/jwb2i"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="40"
                    android:textColor="#967E76"/>
            </RadioGroup>

            <Button
                android:id="@+id/btnJawab"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:backgroundTint="#7D9D9C"
                android:text="KIRIM"
                android:textColor="#2C3639"
                android:shadowColor="@color/black"/>

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>